<Window x:Class="WpfApp2.nhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="nhap" Height="500" Width="350" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Left" Width="500">
        <Rectangle  Height="500" Width="350" Margin="0,0,131,0">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#ffffff" />
                    <GradientStop Color="#333399" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>


        </Rectangle>



    </Grid>
</Window>
